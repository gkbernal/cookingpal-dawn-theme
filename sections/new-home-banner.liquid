<style>
.new-home-sec {
    margin-top: 100px;
    padding: 100px 50px;
}

.new-home-sec-row {
    max-width: 1300px;
    margin: auto;
    display: grid;
    grid-template-columns: 30% 1fr;
    align-items: center;
}

.new-home-sec-col1 {
    padding: 20%;
    background-color: red;
    border-radius: 24px;
    margin-right: -50px;
    position: relative;
    z-index: 1;
}

.new-home-sec-col1 h1 {
    margin: 0 0 20px;
    line-height: 1.3;
    font-weight: 700;
    font-size: {{ section.settings.head-size }}px;
    color: {{ section.settings.id-head-color }};
}

.new-home-sec-col1 p {
    margin: 0 0 20px;
    line-height: 1.7;
}

.new-home-sec-col2 img {
    border-radius: 24px;
}


</style>

<div class="new-home-sec">
  <div class="new-home-sec-row">
    <div class="new-home-sec-col1">
      <h1>{{ section.settings.id-head }}</h1>
      {{ section.settings.id-content }}
      <a href="{{ section.settings.id-btn-url }}">{{ section.settings.id-btn-text }}</a>
    </div>
    <div class="new-home-sec-col2">
      <img src=" {{ section.settings.id-img | img_url: 'master' }}" loading="lazy" width="100%" height="auto" />
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "new Banner",
    "settings": [
      {
        "type": "text",
        "label": "Heading",
        "id": "id-head"
      },
      {
        "type": "richtext",
        "label": "Content",
        "id": "id-content"
      },
      {
        "type": "text",
        "label": "Button Text",
        "id": "id-btn-text"
      },
      {
        "type": "url",
        "label": "Button Link",
        "id": "id-btn-url"
      },
      {
        "type": "image_picker",
        "label": "Image",
        "id": "id-img"
      },
      {
        "type": "color",
        "label": "Heading Color",
        "id": "id-head-color",
        "default": "#193C46"
      },
      {
        "type": "range",
        "id": "head-size",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Heading Size",
        "default": 60
      },
      {
        "type": "color",
        "label": "Content Color",
        "id": "id-content-color",
        "default": "#193C46"
      }
    ],
    "presets" : [
      {
        "name": "new Banner"
      }
    ]
  }
{% endschema %}

